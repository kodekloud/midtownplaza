<script>
    $(document).ready(function(e) {
        function renderAll (){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            var promo = getPromotionDetailsBySlug(slug);
            renderPromoDetails('#promo_container', '#promo_template', promo)
            show_content();
        }
        loadMallDataCached(renderAll); 
		
    });
</script>