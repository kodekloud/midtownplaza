<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var banners = getBanners();
            // renderBanner('#banner_template','#home_banner',banners);
            var events = getEventsList();
            $.each(events, function(i, v){
                v.type="events";
            });
            
            var promos = getPromotionsList();
            $.each(promos, function(i, v){
                v.type="promotions";
            });
            var promos_events = (promos.concat(events)).sortBy(function(o){ return o.start_date })[0];
            var pp = [];
            pp.push(promos_events);
            renderPromosEvents('#home_promo_container', '#home_promo_template', pp)
            
            var latest_fashion = getFashions()[0];
            renderFashion('#home_fashion_container', '#home_fashion_template', latest_fashion);
            
            init_side();
            show_content();
            $('.flexslider').flexslider({
                animation: "slide",
            });
        }
        loadMallDataCached(renderAll); 
    })
</script>